#! /usr/bin/env ruby

appdir = File.dirname(File.symlink?(__FILE__)? File.readlink(__FILE__) : __FILE__)

require 'bundler'
ENV['BUNDLE_GEMFILE'] = File.join(appdir, '..', 'Gemfile')

Bundler.require

require File.join(appdir, '..', 'lib', 'xlogin.rb')
require File.join(appdir, '..', 'lib', 'xlogin', 'cli.rb')

Xlogin::CLI.run
